HEADERS = \
	Windows.h\
	Graphics.h\
	Database.h\
	Config.h\
	Layout.h\
	Drawfile.h\
	Draw.h\
	Modules.h\
	File.h\
	Print.h

LIBS = \
	L:Stubs.o.asstubs\
	MemCheck:o.MC\
	L:AJWLib.o.AJWLib\
	L:Desk.o.Desk


OBJECTS = \
	Modules.o\
	Graphics.o\
	Windows.o\
	Config.o\
	Layout.o\
	Draw.o\
	File.o\
	Print.o\
	Drawfile.o\
	Database.o\
	Main.o

SOURCES = $(OBJECTS:.o=.c)

TARGET		=	!RunImage

INCLUDE	=	C:

CCFLAGS		=	$(CCEXTRA) -throwback -strict -g -I$(INCLUDE) -fah
#CCFLAGS		=	$(CCEXTRA) -throwback -strict -Otime -I$(INCLUDE) -DAJWLIB_ASSERT_ERROR2 -fah
LINKFLAGS	=	$(LINKEXTRA) -d

CC		=	MemCheck.cc cc -c $(CCFLAGS)
#CC		=	cc -c $(CCFLAGS)
LINK		=	DrLink $(LINKFLAGS)

#INCLUDE	=	L:

#CCFLAGS		=	$(CCEXTRA) -mstubs -mthrowback -O3 -pedantic -Wall -I$(INCLUDE) -DAJWLIB_ASSERT_ERROR2
#LINKFLAGS	=	$(LINKEXTRA)

#CC		=	gcc -c $(CCFLAGS)
#LINK		=	gcc $(LINKFLAGS)


.c.o: $(HEADERS)
	$(CC) $< -o $@



!RunImage: $(OBJECTS)
	$(LINK) -o $@ $(OBJECTS) $(LIBS)

remove:

clean: remove
	rm !RunImage
	rm *.o

