HEADERS	=	\
		Windows.h\
		Graphics.h\
		Database.h\
		Config.h\
		Layout.h\
		Drawfile.h\
		Draw.h\
		Modules.h\
		File.h

LIBS	=	\
		L:Stubs.o.asstubs\
		L:AJWLib.o.AJWLib\
		L:Desk.o.debug.stderr\
		L:Desk.o.Desk


OBJECTS	=	\
		Modules.o\
		Graphics.o\
		Windows.o\
		Config.o\
		Layout.o\
		Reports.o\
		Draw.o\
		File.o\
		Drawfile.o\
		Database.o\
		!RunImage.o

INCLUDE	=	C:

TARGET		=	!RunImage

CCFLAGS		=	$(CCEXTRA) -throwback -strict -g -I$(INCLUDE)
LINKFLAGS	=	$(LINKEXTRA) -d

CC		=	cc -c $(CCFLAGS)
LINK		=	DrLink $(LINKFLAGS)



.c.o: $(HEADERS) $(LIBS)
	$(CC) $< -o $@



$(TARGET):	$(OBJECTS) $(LIBS)
	$(LINK) -o $@ $(OBJECTS) $(LIBS)

